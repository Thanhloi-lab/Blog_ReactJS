<div class="mt-4">
    <h3>Đăng khóa học</h3>
    <form class="mt-4" method="post" action="/courses/{{course._id}}?_method=PUT">
        <div class="form-group">
            <label for="name">Name</label>
            <input type="text" name="name" class="form-control" value="{{course.name}}" id="name" placeholder="Name">
        </div>
        <div class="form-group">
            <label for="description">Description</label>
            <textarea name="description" class="form-control" id="description" 
                placeholder="Description">{{course.description}}</textarea>
        </div>
        <div class="form-group">
            <label for="videoId">videoId</label>
            <input type="text" name="videoId" class="form-control" value="{{course.videoId}}" id="videoId" placeholder="VideoId">
        </div>
        <div class="form-group">
            <label for="level">level</label>
            <input type="text" name="level" class="form-control" value="{{course.level}}" id="level" placeholder="Level">
        </div>
        <button type="submit" class="btn btn-primary">Lưu lại</button>
    </form>
</div>